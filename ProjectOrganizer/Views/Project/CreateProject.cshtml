<!-- nav bar, copyright -> shared view -->

<!-- model binding -->
@model ProjectOrganizer.Models.Project.Project;

@{
    Layout = null;
}

<head>
    <!-- bootstrap -> css framework -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <title>Create Project</title>
</head>

<body>
    <h1>Create New Project</h1>
    <a href="/project/dashboard">Dashboard</a>
    <br/><br/>

    <!-- asp-action = methodName in controller -->
    <!-- method = Form/ Http Verbs - GET, POST, PUT, DELETE -->
    <!-- asp-for = propertyName in Model (model binding) -->
    <!-- usually, one html page can submit one form. want to submit more than one, use AJAX, JS -->

    <form asp-action="CreateProject" method="post">
        
        <div class="card" style="width:45rem">
            <div class="card-body">

                <div class="row" style="height:2rem; padding-bottom:3rem;">
                    <div class="col"><b class="mb-0">Project Name</b></div>
                    <div class="col-sm-8"><input id="projectName" type="text" asp-for="Project_Name" style="width:20rem" /></div>
                </div>

                <div class="row" style="height:2rem; padding-bottom:3rem;">
                    <div class="col"><b class="mb-0">Description</b></div>
                    <div class="col-sm-8"><input id="description" type="text" asp-for="Description" style="width:20rem" /></div>
                </div>

                <div class="row" style="height:2rem; padding-bottom:3rem;">
                    <div class="col"><b class="mb-0">Created Date</b></div>
                    <div class="col-sm-8"><input id="createdDate" type="date" asp-for="Created_Date" style="width:20rem" /></div>
                </div>

            </div> <!-- card body -->
        </div> <!-- card -->
        <br/>

        <button class="btn btn-secondary" type="submit">Create</button>

    </form>    
</body>